# Development stage with Air for hot reloading
FROM golang:1.25-alpine

# Install build dependencies and Atlas CLI
RUN apk add --no-cache git gcc musl-dev sqlite-dev ca-certificates curl && \
    curl -sSf https://atlasgo.sh | sh

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Install Air for hot reloading
RUN go install github.com/air-verse/air@latest

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Set environment variables
ENV PORT=8080
ENV HOST=0.0.0.0
ENV DB_PATH=/data/s3local.db

# Run Air for hot reloading
CMD ["air", "-c", ".air.toml"]
